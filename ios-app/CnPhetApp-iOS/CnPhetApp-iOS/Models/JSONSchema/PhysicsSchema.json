{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PhysicsDSL Schema",
  "type": "object",
  "required": ["subject", "scene", "objects"],
  "properties": {
    "subject": { "type": "string", "enum": ["physics"] },
    "scene": {
      "type": "object",
      "properties": {
        "coordinate_system": { "type": "string" },
        "time": {
          "type": "object",
          "properties": {
            "start": {"type": "number"},
            "end": {"type": "number"},
            "step": {"type": "number"}
          },
          "required": ["start", "end", "step"]
        }
      },
      "required": ["coordinate_system", "time"]
    },
    "objects": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "type": {"type": "string"},
          "mass": {"type": "number"},
          "radius": {"type": "number"}
        },
        "required": ["id", "type"]
      }
    }
  }
}

